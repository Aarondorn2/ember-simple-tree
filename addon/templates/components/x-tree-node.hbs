{{#if model.checkable}}
  {{x-check value=model.id checked=model.isChecked action=(action 'toggleCheck')}}
{{/if}}
<span class="toggle-icon" {{action 'toggleExpand'}}>
  {{#if model.children.length}}
    {{#if model.isExpanded}}
      &#x25BC;
    {{else}}
      &#x25B6;
    {{/if}}
  {{else}}
    &nbsp;&nbsp;
  {{/if}}
</span>
<span {{action select model}}>
  {{model.name}}
</span>
