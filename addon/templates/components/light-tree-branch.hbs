{{#each model as |child|}}
  {{#if child.isVisible}}
    {{#if hasBlock}}
      {{#light-tree-children
        checkable=checkable
        recursiveCheck=recursiveCheck
        updateCheckbox=updateCheckbox
        chosenId=chosenId
        onCheck=onCheck
        onSelect=onSelect
        onHover=onHover
        onHoverOut=onHoverOut
        model=child
        as |node|
      }}
        {{yield node}}
      {{/light-tree-children}}
    {{else}}
      {{light-tree-children
        model=child
        checkable=checkable
        recursiveCheck=recursiveCheck
        updateCheckbox=updateCheckbox
        chosenId=chosenId
        onCheck=onCheck
        onSelect=onSelect
        onHover=onHover
        onHoverOut=onHoverOut
      }}
    {{/if}}
  {{/if}}
{{/each}}
