<span class="toggle-icon" {{action 'toggleExpand' bubbles=false}}>
  {{#if model.children.length}}
    {{#if model.isExpanded}}
      &#x25BC;
    {{else}}
      &#x25B6;
    {{/if}}
  {{else}}
    &nbsp;&nbsp;
  {{/if}}
</span>

{{#if checkable}}
  <span onclick={{action 'toggleCheck'}}>
    {{input type="checkbox"
      checked=model.isChecked
      indeterminate=model.isIndeterminate }}
  </span>
{{/if}}

{{#if hasBlock}}
  {{yield model}}
{{else}}
  {{model.name}}
{{/if}}
