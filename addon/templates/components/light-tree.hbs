{{#if hasBlock}}
  {{#light-tree-branch
     checkable=checkable
     recursiveCheck=recursiveCheck
     chosenId=chosenId
     onCheck=onCheck
     onSelect=onSelect
     onHover=onHover
     onHoverOut=onHoverOut
     model=model as |node|}}
    {{yield node}}
  {{/light-tree-branch}}
{{else}}
  {{light-tree-branch
    model=model
    checkable=checkable
    recursiveCheck=recursiveCheck
    chosenId=chosenId
    onCheck=onCheck
    onSelect=onSelect
    onHover=onHover
    onHoverOut=onHoverOut}}
{{/if}}
