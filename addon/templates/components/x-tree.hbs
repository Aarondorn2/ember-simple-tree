{{#if hasBlock}}
  {{#x-tree-branch
    check=check
    select=select
    hover=hover
    hoverOut=hoverOut
    checkable=checkable
    chosenId=chosenId
    model=model as |node|}}
    {{yield node}}
  {{/x-tree-branch}}
{{else}}
  {{x-tree-branch
    model=model
    check=check
    select=select
    hover=hover
    hoverOut=hoverOut
    checkable=checkable
    chosenId=chosenId}}
{{/if}}
