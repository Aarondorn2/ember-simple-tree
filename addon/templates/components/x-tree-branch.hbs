{{#each model as |child|}}
  {{#if child.isVisible}}
    {{#if hasBlock}}
      {{#x-tree-children
        checkable=checkable
        chosenId=chosenId
        onCheck=onCheck
        onSelect=onSelect
        onHover=onHover
        onHoverOut=onHoverOut
        model=child as |node|}}
        {{yield node}}
      {{/x-tree-children}}
    {{else}}
      {{x-tree-children
        model=child
        checkable=checkable
        chosenId=chosenId
        onCheck=onCheck
        onSelect=onSelect
        onHover=onHover
        onHoverOut=onHoverOut}}
    {{/if}}
  {{/if}}
{{/each}}
