{{#each model as |child|}}
  {{#if child.isVisible}}
    {{#if hasBlock}}
      {{#x-tree-children
        select=select
        hover=hover
        hoverOut=hoverOut
        checkable=checkable
        chosenId=chosenId
        model=child as |node|}}
        {{yield node}}
      {{/x-tree-children}}
    {{else}}
      {{x-tree-children
        model=child
        select=select
        hover=hover
        hoverOut=hoverOut
        checkable=checkable
        chosenId=chosenId}}
    {{/if}}
  {{/if}}
{{/each}}
